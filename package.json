{
  "name": "rpgkeeper",
  "version": "2.0.0-beta.10",
  "description": "A site for managing your digital character sheets.",
  "main": "server.js",
  "scripts": {
    "start": "DEBUG=true node ./server.js",
    "build:distclean": "rimraf dist/* .cache",
    "build:clean": "rimraf dist/*",
    "build:copy": "cpr client/static/ dist/static",
    "build:release": "npm run build:distclean && npm run build:copy && parcel build client/index.html --detailed-report",
    "build:watch": "npm run build:clean && npm run build:copy && parcel watch client/index.html",
    "lint:fix": "eslint --ext .js,.vue --fix server.js config.js server/ client/"
  },
  "repository": "Morgul/rpgkkeper",
  "author": "Christopher S. Case <chris.case@g33xnexus.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.12.2",
    "ajv-errors": "^1.0.1",
    "ajv-keywords": "^3.4.1",
    "axios": "^0.19.0",
    "base62": "^2.0.0",
    "better-ajv-errors": "^0.6.4",
    "body-parser": "^1.19.0",
    "codemirror": "^5.53.2",
    "colors": "^1.3.3",
    "components": "^0.1.0",
    "connect-session-knex": "^1.4.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "gravatar": "^1.3.1",
    "knex": "^0.21.1",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "mailgun": "^0.5.0",
    "passport": "^0.4.0",
    "passport-google-web": "^1.0.0",
    "rethinkdbdash": "^2.3.31",
    "rpgdicejs": "^2.0.0-rc.2",
    "sacjs": "^1.3.0",
    "socket.io": "^2.0.3",
    "sqlite3": "^4.2.0",
    "trivial-logging": "^2.0.0-rc.1",
    "trivialperms": "^1.0.0-rc.3",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@fortawesome/fontawesome-svg-core": "^1.2.21",
    "@fortawesome/free-brands-svg-icons": "^5.10.1",
    "@fortawesome/pro-regular-svg-icons": "^5.10.1",
    "@fortawesome/pro-solid-svg-icons": "^5.10.1",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "@vue/component-compiler-utils": "^3.1.2",
    "autoprefixer": "^9.7.6",
    "bootstrap": "^4.2.1",
    "bootstrap-vue": "^2.13.1",
    "caniuse-lite": "^1.0.30001054",
    "cpr": "^3.0.1",
    "date-fns": "^2.13.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jsdoc": "^25.0.1",
    "eslint-plugin-vue": "^6.1.2",
    "husky": "^4.2.5",
    "jquery": "^3.5.1",
    "lint-staged": "^10.2.2",
    "marked": "^1.0.0",
    "parcel": "^1.11.0",
    "pino-pretty": "^4.0.0",
    "popper.js": "^1.14.6",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.5",
    "sass": "^1.26.5",
    "socket.io-client": "^2.0.3",
    "vue": "^2.6.11",
    "vue-codemirror": "^4.0.6",
    "vue-color": "^2.7.0",
    "vue-hot-reload-api": "^2.3.1",
    "vue-router": "^3.1.5",
    "vue-rx": "6.0.1",
    "vue-template-compiler": "^2.6.11",
    "vue-typeahead-bootstrap": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn run lint:fix",
      "git add"
    ]
  }
}
